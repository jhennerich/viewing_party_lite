<h1>Movie Results</h1>

<%= link_to 'Discover Page', "/dashboard/discover" %>

<% if @movies %>
  <% @movies.each do |movie| %>
    <div id='movie'>
      <p><strong><%= link_to "#{movie.title}", "/dashboard/movies/#{movie.id}",
         method: :get %></strong>: Vote Average: <%= movie.vote_average %></p>
    </div>
  <% end %>
<% end %>
